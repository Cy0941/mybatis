<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<!--MyBaits根配置文件：主要用用于配置数据库事务等-->
<configuration>
    <!--加载属性文件-->
    <properties resource="db.properties">
        <!--
            MyBatis 将按照如下顺序进行解析 properties 标签
                1、在 properties 元素体内定义的 property 属性会被优先读取
                2、然后读取 properties 元素中 resource/url 加载的属性，会覆盖已读取的同名属性值
                3、最后读取 parameterType 传递的属性，会覆盖已读取的同名属性值
            cxy 建议：1、不要在 properties 元素体内定义任何属性值，只定义在对应的属性文件中即可；2、properties 文件中的属性名称必须要有一定的辨识度
        -->
        <!--<property name="testName" value="testValue"/>-->
    </properties>

    <!--全局设置-->
    <!--<settings>
        <setting name="" value=""/>
    </settings>-->

    <!--别名定义：便于在mapper.xml中进行简单引用-->
    <typeAliases>
        <!--单个类别名定义-->
        <!--<typeAlias type="cn.cxy.first.model.User" alias="user"/>-->
        <!--批量定义：具体的别名名称为类名或类名首字母大小写均可-->
        <package name="cn.cxy.first.model"/>
    </typeAliases>
    
    <!--与 spring 整合后此配置废除-->
    <environments default="development">
        <environment id="development">
            <!--MyBatis 接管事务及数据库连接池-->
            <transactionManager type="JDBC"></transactionManager>
            <dataSource type="POOLED">
                <property name="driver" value="${jdbc.driver}"/>
                <property name="url" value="${jdbc.url}"/>
                <property name="username" value="${jdbc.username}"/>
                <property name="password" value="${jdbc.password}"/>
            </dataSource>
        </environment>
    </environments>

    <!--cxy 加载映射文件-->
    <mappers>
        <!--传统开发方式加载映射文件-->
        <mapper resource="sqlMap/User.xml"/>
        <mapper resource="sqlMap/UserMapper.xml"/>
        <mapper resource="sqlMap/UserOrderMapper.xml"/>

        <!--
            在采用 mapper 代理开发的情况下通过 mapper 接口进行加载
                前提条件：mapper.java与mapper.xml文件名必须保持一致且在同一目录中
        -->
        <!--<mapper class="cn.cxy.first.dao.mapper.UserMapper"/>&lt;!&ndash;采用mapper开发时效果一致&ndash;&gt;-->
        <!--批量引入-->
        <!--<package name="cn.cxy.first.dao.mapper"/>-->

    </mappers>

</configuration>
